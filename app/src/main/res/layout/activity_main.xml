<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glass_morphism_background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/glass_morphism_background"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bottom_navigation_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"

            android:scaleType="centerCrop"
            android:src="@drawable/home_bottom_nav"/>
        <ImageView
            android:id="@+id/Quizzes_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin"
            android:layout_toStartOf="@id/home_icon"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_baseline_question_answer_24" />
        <ImageView
            android:id="@+id/eventsAndWorkshop_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin"
            android:layout_toStartOf="@id/Quizzes_icon"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_baseline_date_range_24"/>
        <ImageView
            android:id="@+id/sigma_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@id/home_icon"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_baseline_video_call_24"/>
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@id/sigma_icon"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:background="@drawable/profile"
            android:id="@+id/profile_icon"/>
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/bottom_nav_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="@android:color/transparent"
        app:itemIconTint="@android:color/white"
        app:itemIconSize="24dp"
        app:itemBackground="@drawable/bottom_nav_active_item"
        app:menu="@menu/bottom_nav_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>