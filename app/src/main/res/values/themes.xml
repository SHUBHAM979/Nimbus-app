<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nimbus2k22" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="fontFamily">@font/poppins_black</item>

<!--        <item name="android:textViewStyle">@style/PoppinsTextView</item>-->
<!--        <item name="android:buttonStyle">@style/PoppinsTextView</item>-->

        <!-- Customize your theme here. -->
    </style>

    <style name="PoppinsTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_black</item>
    </style>

    <style name="PoppinsButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/poppins_black</item>
    </style>


</resources>